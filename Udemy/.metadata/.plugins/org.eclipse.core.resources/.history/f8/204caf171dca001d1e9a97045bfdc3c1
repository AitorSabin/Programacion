package ejercicio7;

import java.util.Scanner;

public class Main {

	public static void main(String[] args) {
		Scanner sc= new Scanner(System.in);
		double saldo;
		int numeroCuenta;
		String nombre;
		String apellido;
		String dni;
		int numeroUsuarios;
		
		System.out.println("Introduce el numero de usuarios de cuentas en el banco: ");
		numeroUsuarios= sc.nextInt();
		
		Cliente usuarios[] = new Cliente[numeroUsuarios];
		
		for(int i=0; i<usuarios.length; i++) {
			
			System.out.println("Introduce el nombre del Cliente. "+(i+1)+":");
			nombre= sc.nextLine();
			System.out.println("Introduce el apellido del Cliente."+(i+1)+":");
			apellido = sc.nextLine();
			System.out.println("Introduce el dni del Cliente."+(i+1)+":");
			dni = sc.nextLine();
			System.out.println("Introduce el NUMERO de cuenta del Cliente. "+(i+1)+":");
			numeroCuenta= sc.nextInt();
			
			usuarios[i]= new Cliente(nombre, apellido, dni, numeroCuenta);
		}
		
		Cuenta cuentas[] = new Cuenta[numeroUsuarios];
		
		for(int i=0; i<cuentas.length; i++) {
			
			System.out.println("Introduce el SALDO de la cuenta del Cliente. "+(i+1)+":");
			saldo= sc.nextDouble();
		}
		
		System.out.println("Introduce el numero ");
	}
}
