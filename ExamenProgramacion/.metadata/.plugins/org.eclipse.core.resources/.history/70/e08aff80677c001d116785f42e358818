package ejercicio1;

import java.util.Scanner;

public class Reloj {
	int horas = 0;
	int minutos = 0;
	int segundos = 0;
	public static void main(String[] args) {
		
		if (horas <=24) {
			System.out.print(horas + ":");
		}if (minutos <=59) {
			System.out.print(minutos + ":");
		}if(segundos <=59) {}
			System.out.print(segundos);
	}
	public void horas() {
		Scanner sc = new Scanner(System.in);
		horas = sc.nextInt();
	}
	public void minutos() {
		Scanner sc = new Scanner(System.in);
		minutos = sc.nextInt();
	}
	public void segundos() {
		Scanner sc = new Scanner(System.in);
		segundos = sc.nextInt();
	}
}
